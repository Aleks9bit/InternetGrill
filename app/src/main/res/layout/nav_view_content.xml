            android:layout_height="2dp"
            android:layout_below="@id/textHome"
            android:background="@color/colorMenuItemDarkLine" />

    </com.grill.internet.internetgrill.widgets.CustomMenuItem>

    <com.grill.internet.internetgrill.widgets.CustomMenuItem
        android:id="@+id/menuCatering"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/menuFamilySpecials"
        android:background="@color/colorMenuItemBackground">

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
