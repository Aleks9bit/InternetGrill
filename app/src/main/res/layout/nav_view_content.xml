        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/menuViewableMenu"
        android:background="@color/colorMenuItemBackground">

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_gravity="top"
            android:background="@color/colorMenuItemLightLine" />

        <ImageView
            android:id="@+id/iconHome"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/menuItemMargin"
            android:adjustViewBounds="true"
            android:src="@drawable/order_online_icon" />

        <TextView
            android:id="@+id/textHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/menuItemMargin"
            android:layout_toRightOf="@id/iconHome"
            android:text="@string/menuMyAccount"
            android:textColor="@color/colorMenuItemText"
            android:textSize="@dimen/menuItemTextSize" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_below="@id/textHome"
            android:background="@color/colorMenuItemDarkLine" />

    </com.grill.internet.internetgrill.widgets.CustomMenuItem>

    <com.grill.internet.internetgrill.widgets.CustomMenuItem
        android:id="@+id/menuWeekdaySpecials"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/menuMyAccount"
        android:background="@color/colorMenuItemBackground">

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_gravity="top"
            android:background="@color/colorMenuItemLightLine" />

        <ImageView
            android:id="@+id/iconHome"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/menuItemMargin"
            android:adjustViewBounds="true"
            android:src="@drawable/weekday_specials_icon" />

        <TextView
            android:id="@+id/textHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/menuItemMargin"
            android:layout_toRightOf="@id/iconHome"
